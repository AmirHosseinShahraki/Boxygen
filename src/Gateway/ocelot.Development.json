{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7002"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/email/verify?id={id}&t={token}&e={email}",
      "UpstreamHttpMethod": [
        "Get"
      ],
      "DownstreamPathTemplate": "/email/verify/?id={id}&email={email}&token={token}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7004
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/profile",
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Patch"
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "DownstreamPathTemplate": "/profiles/{userId}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "ChangeDownstreamPathTemplate": {
        "userId": "Claims[sub] > value"
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [
        "Post"
      ],
      "DownstreamPathTemplate": "/auth/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7000
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/register",
      "UpstreamHttpMethod": [
        "Post"
      ],
      "DownstreamPathTemplate": "/auth/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7000
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    }
  ]
}